@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

@Html.CodeMirrorScriptReferences()

<div class="sf-code sf-code--down clearfix">
    <textarea sf-code-area
              sf-type="javascript"
              sf-tab-mode="classic"
              sf-line-numbers="true"
              sf-match-brackets="true"
              sf-model="properties.InlineCode.PropertyValue"
              placeholder="@Html.Resource("StartWritingEmbedCode")"></textarea>

    <a class="pull-right sf-code-tips" href=""
       sf-popover-html=""
       sf-popover-placement="top"
       sf-popover-trigger="focus"
       sf-popover-content="<div>
                                <div class='small m-bottom-sm'>
                                  <p>
                                     @Html.Resource("EmbedCodeExample")
                                  </p>
                                  <p>
                                      <b>@Html.Resource("CssCode")</b>
                                  </p>
                                  <p>
                                      @Html.Resource("CssCodeExample")
                                  </p>
                                    <p>
                                       <b>@Html.Resource("JavaScriptCode")</b>
                                    </p>
                                    <p>
                                        @Html.Resource("JavaScriptCodeExample")
                                    </p>
                                </div>
                              </div>"
        sf-popover-title="@Html.Resource("Tips")">
        @Html.Resource("Tips")
    </a>
</div>

<expander expander-title='@Html.Resource("MoreOptions")'>
    <div class="form-group">
        <label>@Html.Resource("Description")</label>
        <input type="text" ng-model="properties.Description.PropertyValue" class="form-control" />
        <div class="text-muted">@Html.Resource("ForYourConvenience")</div>
    </div>
</expander>